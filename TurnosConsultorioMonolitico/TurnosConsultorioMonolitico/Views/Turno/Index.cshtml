@model IEnumerable<TurnosConsultorioMonolitico.Models.Turno>

@{
    ViewData["Title"] = "Listado de Turnos";
}

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Listado de Turnos</h4>
            <a class="btn btn-primary" asp-action="Create">+ Nuevo Turno</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Paciente</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th style="width: 180px">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turno in Model)
                    {
                        <tr>
                            <td>@turno.NombrePaciente</td>
                            <td>@turno.Fecha.ToString("yyyy-MM-dd")</td>
                            <td>@turno.Hora.ToString(@"hh\:mm")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@turno.Id" class="btn btn-sm btn-primary me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@turno.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
