@model IEnumerable<TurnosConsultorioMonolitico.Models.Paciente>

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Listado de Pacientes</h4>
            <a class="btn btn-success" asp-action="Create">+ Agregar Paciente</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th style="width: 180px">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Nombre</td>
                            <td>@p.Apellido</td>
                            <td>@p.DNI</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
