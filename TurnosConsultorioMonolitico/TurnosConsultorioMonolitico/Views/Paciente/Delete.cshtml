@model TurnosConsultorioMonolitico.Models.Paciente

<h2>¿Estás seguro de que querés eliminar este paciente?</h2>

<div>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Apellido:</strong> @Model.Apellido</p>
    <p><strong>DNI:</strong> @Model.DNI</p>

    <form asp-action="DeletePost" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>

</div>